# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# MCP Server Settings
# Transport mode: 'stdio' (for Claude Desktop, Cursor) or 'streamable-http' (for HTTP access)
TRANSPORT=stdio
# HTTP server settings (only used when TRANSPORT=streamable-http)
HOST=0.0.0.0
PORT=8000

# Backend Selection
# Choose memory store backend: 'redis', 'postgresql', or 'mongodb'
BACKEND=redis

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DATABASE=langgraph_store
POSTGRES_SSLMODE=disable

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=langgraph_store
MONGODB_COLLECTION=memory_store

# Memory Store Configuration
# Directory containing JSON configuration files (each file defines a memory category)
CONFIG_DIR=files

# Comma-separated list of allowed file names (empty = all allowed)
# Example: ALLOWED_FILES=programming-style,communication-preferences,writing-style
ALLOWED_FILES=

# Comma-separated list of read-only files in format "memory_category/file_name"
# Example: READ_ONLY_FILES=memories/core-values,memories/company-standards
READ_ONLY_FILES=

